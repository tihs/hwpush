{lib_dirs, ["deps"]}.

{erl_opts, [
  debug_info,
  warn_export_all,
  warn_unused_import,
  {i, "include"},
  {src_dirs, ["src"]}]}.

{cover_enabled, true}.

{deps, [
  {jiffy, ".*",  {git, "https://github.com/davisp/jiffy.git", {tag, "0.14.3"}}},
  {jsx, ".*", {git, "git://github.com/talentdeficit/jsx.git", {tag, "v2.6.2"}}}
]}.
